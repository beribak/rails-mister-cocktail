<div class="container text-center bg-dark text-white p-3">
  <h2><%= @cocktail.name %></h2>
  <% @cocktail.doses.each do |dose| %>
    <h4><%= dose.description %></h4>
    <h4><%= dose.ingredient.name %></h4>
    <h3 class="btn btn-secondary">
      <%= link_to 'Remove', cocktail_dose_path(dose), method: :delete %>
    </h3>
  <% end %>
  <h3 class="btn btn-secondary">
    <%= link_to 'Menu', cocktails_path %>
  </h3>
</div>

